<Page x:Class="PictureflectPartialSource.MainPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:PictureflectPartialSource">
    <Grid Background="{ThemeResource CustomAltHighBrush}">
        <StackPanel Margin="20">
            <StackPanel Margin="0,0,0,20" Padding="0,0,0,20" BorderBrush="{ThemeResource CustomBaseMediumBrush}" BorderThickness="0,0,0,1">
                <TextBlock Margin="0,0,0,10" Style="{StaticResource CustomHeading1TextBlockStyle}" Text="CustomShadowControl"></TextBlock>
                <local:CustomShadowControl SpreadRadius="1">
                    <TextBlock Foreground="FloralWhite" FontSize="40" Text="Text with stroke"></TextBlock>
                </local:CustomShadowControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
